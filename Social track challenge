import java.util.Scanner;

public class InterviewFeedback {

    public static void main(String[] args) {
        // Create a new Scanner object to read input from the console.
        Scanner scanner = new Scanner(System.in);

        // Print a welcome message to the user.
        System.out.println("Welcome to the interview feedback form.");

        // Ask the user to rate their overall experience on a scale of 1 to 5, where 1 is "very bad" and 5 is "very good".
        System.out.println("How would you rate your overall experience with the interview?" +
                "\n1. Very bad" +
                "\n2. Bad" +
                "\n3. Neutral" +
                "\n4. Good" +
                "\n5. Very good");

        // Read the user's response.
        int rating = scanner.nextInt();

        // Ask the user to provide a comment about their experience.
        System.out.println("Please provide a comment about your experience.");

        // Read the user's comment.
        String comment = scanner.nextLine();

        // Print a thank you message to the user.
        System.out.println("Thank you for your feedback.");
    }
}